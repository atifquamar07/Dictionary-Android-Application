<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_fragment_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RecyclerViewFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/posRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/detailFragmentContainerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.dictionary.fragments.DetailFragment"
        android:layout_below="@+id/posRecyclerView"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        tools:layout="@layout/fragment_detail"/>







</RelativeLayout>